<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_200"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Main.Fragment.Schedule.DetailSchedule.DetailSchedule">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/md_white_1000"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_deep_orange_500"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/nama_produk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Produk"
                    android:textColor="@color/md_white_1000"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/harga_produk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="6480000"
                    android:textColor="@color/md_white_1000" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status : "
                        android:textColor="@color/md_grey_600"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/status_produk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="terverifikasi"
                        android:textColor="@color/md_grey_600" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Mulai : "
                        android:textColor="@color/md_grey_600"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tgl_mulai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/05/2018"
                        android:textColor="@color/md_grey_600" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Selesai : "
                        android:textColor="@color/md_grey_600"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tgl_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19/05/2018"
                        android:textColor="@color/md_grey_600" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waktu Mulai : "
                        android:textColor="@color/md_grey_600"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/waktu_mulai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00:00"
                        android:textColor="@color/md_grey_600" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waktu Selesai : "
                        android:textColor="@color/md_grey_600"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/waktu_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05:00:00"
                        android:textColor="@color/md_grey_600" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi : "
                        android:textColor="@color/md_grey_600"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lokasi_produk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jakarta Selatan"
                        android:textColor="@color/md_grey_600" />
                </LinearLayout>

                <TextView
                    android:id="@+id/deskripsi_produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/deskipsi"
                    android:textColor="@color/md_grey_600" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>