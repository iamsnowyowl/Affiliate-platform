<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/detail_accessor_skill"
        android:layout_width="155dp"
        android:layout_height="185dp"
        android:layout_marginLeft="@dimen/margin_right_icon"
        android:layout_marginBottom="15dp"
        android:clipToPadding="false"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient1">

            <com.intrusoft.library.FrissonView
                android:id="@+id/frisson_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:alphaValue="50"
                app:tideCount="8"
                app:tideHeight="50dp"
                app:tintColor="@color/white" />

            <TextView
                android:id="@+id/title_sertifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/margin_horizontal_layout"
                android:layout_marginBottom="@dimen/margin_top_layout"
                android:textColor="@color/md_grey_50"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_sertifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="@dimen/margin_horizontal_layout"
                android:layout_marginTop="@dimen/margin_top_layout"
                android:text="@string/pending"
                android:textColor="@color/primaryColorLight"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btn_add_skill"
        android:layout_width="155dp"
        android:layout_height="185dp"
        android:layout_marginLeft="@dimen/margin_right_icon"
        android:layout_marginRight="@dimen/margin_right_icon"
        android:layout_marginBottom="15dp"
        android:baselineAligned="false"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_expertise"
                android:textColor="@color/primaryColorDark" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>