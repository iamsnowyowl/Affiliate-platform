<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="EdittextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryColorDark</item>
        <item name="android:tint">@color/primaryColorDark</item>
    </style>

    <style name="Toolbar_Popup" parent="AppTheme.NoActionBar">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:background">@color/backgroundPrimary</item>
    </style>
    
    <style name="CalendatDateColor" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/mcv_text_date_light</item>
        <!--<item name="fontFamily">@font/shirkhand</item>-->
    </style>
</resources>
